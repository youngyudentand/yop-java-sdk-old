    <groupId>com.yeepay.g3.yop</groupId>
    <artifactId>yop-java-sdk</artifactId>
    <version>2.1.5</version>
    <packaging>jar</packaging>
    <name>YOP :: SDK</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.6</maven.compiler.source>
        <maven.compiler.target>1.6</maven.compiler.target>
        <maven.compiler.compilerVersion>1.6</maven.compiler.compilerVersion>

        <yop-ca-frame.version>1.0</yop-ca-frame.version>

        <fasterxml.jackson.version>2.8.9</fasterxml.jackson.version>
        <httpcomponents.version>4.5.4</httpcomponents.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.yeepay.g3.yop</groupId>
            <artifactId>yop-ca-frame</artifactId>
            <version>${yop-ca-frame.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>com.yeepay.g3.utils</groupId>
                    <artifactId>yeepay-utils-common</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
